.content-bg {
  margin-top: 10rpx;
  padding: 10rpx;
  border-top:2rpx #dadada solid;
  background-color: #eef0f0;
}

.content {
  clear: both;
  overflow: hidden;
  width: 100%;
}

.content .left,
.content .right {
  width: 49%;
}

.content .left {
  float: left;
}

.content .right {
  float: right;
}

.item {
  display: inline-block;
  background: #fff;
  margin-bottom: 15rpx;
  border-radius: 20rpx;
  box-shadow:0px 0px 10rpx 10rpx #eef0ed;
  border: 1px #eef0ed solid;
  width: 100%;
}

.item-img {
  width: 100%;
  border-radius: 15rpx 15rpx 0 0;
}

.item-title {
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 2;
  font-family: 'PingFang SC-Medium';
  /*只显示2行  */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.description {
  margin: 10rpx 5rpx 10rpx 10rpx;
  font-size: 26rpx;
  color: #666;
  /*只显示三行  */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.info-view {
  padding: 15rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.heart {
  display: flex;
  align-items: center;
}

.likes {
  width: 40rpx;
  height: 40rpx;
}

.likes_num {
  font-size: 26rpx;
  font-family: 'PingFang SC-Medium';
  color: #666;
}

.time {
  font-size: 25rpx;
  font-family: 'PingFang SC-Medium';
  color: #888;
}